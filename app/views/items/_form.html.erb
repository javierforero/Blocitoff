<%= form_for [user, item] do |f| %>
  <div class="form-group">
    <%= f.label "New item" %>
    <%= f.text_field :name,class: "form-control", placeholder: "Enter item" %>
  </div>
  <div onclick="blocmetrics.report(\"add item\")"><%= f.submit "Add item", class: "btn btn-default pull-right" %></div>
<% end %>
